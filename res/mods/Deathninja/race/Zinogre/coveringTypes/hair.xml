<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<coveringType>
	<!-- GENERAL INFORMATION: If you are unsure of anything, please use the LT Discord to ask for help! -->
	
	<!-- See fur.xml for a fully-commented coveringType example. -->
	
	<category>HAIR</category>
	
	<determiner><![CDATA[a layer of]]></determiner>
	<name><![CDATA[fur]]></name>
	<namePlural pluralByDefault="false"><![CDATA[furs]]></namePlural> 
	
	<naturalCoveringModifiers>
		<modifier>FLUFFY</modifier>
	</naturalCoveringModifiers>
	
	<extraCoveringModifiers/>
	
	<naturalPatterns>
		<pattern weighting="1">NONE</pattern>
	</naturalPatterns>
	
	<extraPatterns>
		<pattern weighting="0">HIGHLIGHTS</pattern>
		<pattern weighting="0">STRIPED</pattern>
		<pattern weighting="0">SPOTTED</pattern>
		<pattern weighting="0">MOTTLED</pattern>
		<pattern weighting="0">MARKED</pattern>
		<pattern weighting="0">OMBRE</pattern>
	</extraPatterns>
	
	<naturalColoursPrimary> 
		<colour>BASE_GRAY_LIGHT</colour>
	</naturalColoursPrimary>
	<extraColoursPrimary values="allCoveringColours"/>
	
	<naturalColoursSecondary> 
		<colour>BASE_GRAY_LIGHT</colour>
	</naturalColoursSecondary>
	<extraColoursSecondary values="allCoveringColours"/>
	
</coveringType>
